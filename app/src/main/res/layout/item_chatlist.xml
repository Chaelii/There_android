<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/chat_profile_iv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#E7EAEE"
        android:src="@drawable/shape_circle"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/chat_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/chat_profile_iv"/>
    <TextView
        android:id="@+id/chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 12:00"
        android:textSize="10sp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/chat_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이곳에 마지막 채팅내용을 입력하세요"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/chat_name_tv"
        app:layout_constraintStart_toEndOf="@id/chat_profile_iv"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chat_count_tv"
        android:background="@drawable/shape_chat_count"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:text="5"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/chat_name_tv"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="#4D000000"
        app:layout_constraintTop_toBottomOf="@id/chat_profile_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>

