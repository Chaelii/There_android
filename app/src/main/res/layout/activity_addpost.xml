<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="54dp">
    <ImageView
        android:id="@+id/addpost_close_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/btn_addpost_close"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시글"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/addpost_done_tv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="완료"
        android:textSize="16sp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/addpost_v1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="14dp"
        android:background="#4D000000"
        app:layout_constraintTop_toBottomOf="@+id/addpost_close_iv"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/addpost_v1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작품명"
                android:textSize="14sp"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/addpost_postname_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="작품명을 입력하세요"
                android:textSize="14sp"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/addpost_image_iv"
                android:layout_width="match_parent"
                android:layout_height="343dp"
                android:background="#656565"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/addpost_postname_et"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작품 설명"
                android:textSize="14sp"
                android:layout_marginTop="43dp"
                app:layout_constraintTop_toBottomOf="@id/addpost_image_iv"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/addpost_postintro_et"
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:text="해당 작품에 대한 설명을 작성합니다."
                android:textSize="14sp"
                android:layout_marginTop="69dp"
                app:layout_constraintTop_toBottomOf="@id/addpost_image_iv"/>
            <EditText
                android:id="@+id/addpost_posttag_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="해시태그를 입력하세요"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/addpost_postintro_et"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
