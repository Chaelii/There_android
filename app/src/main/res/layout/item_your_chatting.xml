<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/your_chatting_profile_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/img_chat_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/your_chatting_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="260dp"
        android:text="이곳에 메세지를 작성합니다. "
        android:textSize="14sp"
        android:textColor="@color/black"
        android:background="@drawable/border_your_chatting_text"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/your_chatting_profile_iv"
        app:layout_constraintTop_toTopOf="@id/your_chatting_profile_iv"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/your_chatting_time_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 9:00"
        android:textSize="10sp"
        android:textColor="#A0ABBB"
        app:layout_constraintBottom_toBottomOf="@id/your_chatting_text_tv"
        app:layout_constraintStart_toEndOf="@id/your_chatting_text_tv"
        android:layout_marginStart="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>