<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="57dp">
    <ImageView
        android:id="@+id/myedit_close_iv"
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        android:layout_marginLeft="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/btn_addpost_close"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 편집"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/myedit_done_tv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="완료"
        android:textSize="16sp"
        android:layout_marginRight="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <!--        android:gravity="center"-->
    <View
        android:id="@+id/myedit_v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="#D0D5DD"
        app:layout_constraintTop_toBottomOf="@+id/myedit_done_tv"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"
        app:layout_constraintTop_toBottomOf="@+id/myedit_v1">
        <ImageView
            android:id="@+id/myedit_profileimg_iv"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/img_mypage_profileimg"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/myedit_imgedit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진변경"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/myedit_profileimg_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myedit_imgedit_btn"/>
        <EditText
            android:id="@+id/myedit_name_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="작가이름"
            android:inputType="text"
            android:textSize="16sp"
            android:background="@null"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/myedit_imgedit_btn"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8C0CC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myedit_name_et"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정명"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myedit_name_et"/>
        <EditText
            android:id="@+id/myedit_accountname_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="계정명"
            android:inputType="text"
            android:textSize="16sp"
            android:background="@null"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/myedit_name_et"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8C0CC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myedit_name_et"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>