<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/my_chatting_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="260dp"
        android:text="이곳에 메세지를 작성합니다. "
        android:textSize="14sp"
        android:textColor="@color/black"
        android:background="@drawable/border_my_chatting_text"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/my_chatting_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 9:00"
        android:textSize="10sp"
        android:textColor="#A0ABBB"
        app:layout_constraintEnd_toStartOf="@id/my_chatting_text_tv"
        app:layout_constraintBottom_toBottomOf="@id/my_chatting_text_tv"
        android:layout_marginEnd="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>